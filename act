var fishes = [];
var catchCount = 0;
var gold = 50;
var lastCatchRarity = "None";

// Admin & Server Luck System
var serverLuck = 1.0;
var luckTimer = 0;
var adminInput;
var forceMythic = false;

// Mini-game Variables
var inMiniGame = false;
var targetFish = null;
var captureProgress = 0;
var garyX = 100;
var garyDir = 2;
var reelX = 100;
var osc; 

// Cinematic Variables
var inCutscene = false;
var cutsceneTimer = 0;

function setup() {
  createCanvas(700, 450); // Increased height for Admin HUD
  updateServerLuck();
  
  // Create Admin UI
  adminInput = createInput('');
  adminInput.position(520, 15);
  adminInput.size(150);
  adminInput.attribute('placeholder', 'Enter Command...');
  let adminBtn = createButton('EXECUTE');
  adminBtn.position(520, 45);
  adminBtn.mousePressed(handleAdmin);

  for (var i = 0; i < 12; i++) {
    fishes.push(new Fish());
  }
  osc = new p5.Oscillator('triangle');
  osc.amp(0);
  osc.start();
}

function handleAdmin() {
  let val = adminInput.value().toLowerCase();
  let parts = val.split(' ');
  
  if (parts[0] === 'luck') {
    serverLuck = parseFloat(parts[1]) || 1.0;
    luckTimer = 999999; 
  } else if (parts[0] === 'gold') {
    gold += parseInt(parts[1]) || 0;
  } else if (parts[0] === 'spawn' && parts[1] === 'mythic') {
    forceMythic = true;
    for(let f of fishes) f.reset(); // Force refresh the pool
  } else if (parts[0] === 'reset') {
    catchCount = 0;
    gold = 50;
    for(let f of fishes) f.reset();
  }
  adminInput.value('');
}

function updateServerLuck() {
  serverLuck = random(1.0, 5.0).toFixed(1);
  luckTimer = 300 * 60; 
}

class Fish {
  constructor() { this.reset(); }
  reset() {
    this.x = random(-800, -100);
    this.y = random(180, height - 50);  
    this.xSpeed = random(1, 3);
    this.ySpeed = random(-0.5, 0.5);
    
    let r = random(1000000); 
    
    // Spawn Logic
    if (forceMythic) {
        let coin = random(1);
        this.rarity = coin > 0.5 ? "QUANTUM SINGULARITY" : "ORIGIN SOUL";
        this.col = coin > 0.5 ? color(0, 255, 255) : color(255, 255, 255);
        this.val = 1000000;
        this.difficulty = 8.0;
        forceMythic = false; // Reset toggle
    }
    else if (r < 10 * serverLuck) { // Secret
        this.rarity = "SECRET"; 
        this.col = color(255, 0, 255); 
        this.val = 25000; 
        this.difficulty = 5.5; 
    }
    else if (r < 100 * serverLuck) { // Legendary
        this.rarity = "LEGENDARY"; 
        this.col = color(255, 215, 0); 
        this.val = 500; 
        this.difficulty = 4; 
    }
    else { 
        this.rarity = "COMMON"; 
        this.col = color(255); 
        this.val = 10; 
        this.difficulty = 1.5; 
    }
    this.pileX = -400; this.pileY = -400;
  }
  move() {
    if (inMiniGame || inCutscene) return; 
    this.x += this.xSpeed;
    this.y += this.ySpeed;
    if (this.y < 160 || this.y > height - 20) this.ySpeed *= -1;
    if (this.x > width + 150) this.reset();
  }
  display() {
    tint(this.col);
    if (this.rarity.includes("QUANTUM")) {
       image(fishImg, this.x + random(-3,3), this.y + random(-3,3), 110, 46);
    } else {
       image(fishImg, this.x, this.y, 110, 46);
    }
    image(fishImg, this.pileX, this.pileY, 60, 25);
    noTint();
    
    let d = dist(mouseX, mouseY + 125, this.x + 55, this.y + 23);
    if (d < 100 && this.x > 0 && !inMiniGame && !inCutscene) {
      fill(this.col); textSize(30); textStyle(BOLD);
      text("!", this.x + 45, this.y - 10); textStyle(NORMAL);
    }
  }
}

function draw() {
  if (inCutscene) {
    runCutscene();
    return;
  }

  background(123, 215, 132); 
  noStroke(); fill(0, 176, 255); rect(0, 160, width, height - 160);

  luckTimer--;
  if (luckTimer <= 0) updateServerLuck();

  // HUD Background
  fill(30); rect(0, 0, width, 160);
  
  // Stats
  fill(255); textSize(16);
  text('ðŸ’° Gold: ' + gold + 'g', 20, 35);
  text('ðŸ€ Server Luck: ' + serverLuck + 'x', 20, 65);
  text('ðŸŽ£ Caught: ' + catchCount, 20, 95);
  
  fill(200); textSize(12);
  text('ADMIN CONSOLE:', 520, 120);

  if (!inMiniGame) {
    displayMainGame();
  } else {
    displayMiniGame();
  }
}

function displayMainGame() {
  noFill(); strokeWeight(3); stroke(0);
  arc(mouseX, mouseY + 95, 30, 60, 0, HALF_PI);
  stroke(255, 255, 0);
  line(mouseX, mouseY - 700, mouseX, mouseY + 125);
  
  image(bucketImg, 620, 100, 60, 50);
  
  for (let f of fishes) {
    f.move();
    f.display();
    if (mouseX > f.x && mouseX < f.x + 110 && 
        mouseY + 125 > f.y && mouseY + 125 < f.y + 46) {
      inMiniGame = true;
      targetFish = f;
      captureProgress = 0;
      garyX = 150;
      reelX = 150;
    }
  }
}

function displayMiniGame() {
  fill(0, 0, 0, 180); rect(0, 0, width, height);
  fill(50); stroke(255); strokeWeight(4); rect(150, 200, 400, 100, 10);
  
  garyX += garyDir * targetFish.difficulty;
  if (garyX > 510 || garyX < 160) garyDir *= -1;
  
  if (keyIsDown(LEFT_ARROW)) reelX -= 5;
  if (keyIsDown(RIGHT_ARROW)) reelX += 5;
  reelX = constrain(reelX, 150, 470);
  
  let distance = abs((reelX + 40) - (garyX + 15));
  if (distance < 45) {
    captureProgress += (targetFish.difficulty > 6 ? 0.3 : 0.7);
    osc.freq(400 + captureProgress * 2);
    osc.amp(0.1, 0.05);
  } else {
    captureProgress -= 0.5;
    osc.amp(0);
  }
  captureProgress = constrain(captureProgress, 0, 100);
  
  noStroke(); fill(46, 204, 113, 150); rect(reelX, 210, 80, 80, 5);
  fill(targetFish.col); rect(garyX, 235, 30, 30, 5);
  
  fill(100); rect(200, 320, 300, 20);
  fill(46, 204, 113); rect(200, 320, map(captureProgress, 0, 100, 0, 300), 20);
  
  if (captureProgress >= 100) {
    if (targetFish.val >= 25000) { 
        inCutscene = true;
        cutsceneTimer = 0;
        inMiniGame = false;
    } else {
        finishCatch();
    }
  }
}

function runCutscene() {
  background(0);
  cutsceneTimer++;
  
  let alpha = map(sin(frameCount * 0.1), -1, 1, 100, 255);
  fill(targetFish.col.levels[0], targetFish.col.levels[1], targetFish.col.levels[2], alpha);
  textAlign(CENTER);
  textSize(40);
  text("UNBELIEVABLE CATCH!", width/2, height/2);
  
  textSize(20);
  fill(255);
  text("The " + targetFish.rarity + " is yours.", width/2, height/2 + 50);
  
  if (cutsceneTimer > 200) { 
    inCutscene = false;
    finishCatch();
  }
}

function finishCatch() {
  inMiniGame = false;
  catchCount++;
  gold += targetFish.val;
  lastCatchRarity = targetFish.rarity;
  targetFish.pileX = 620 + random(10);
  targetFish.pileY = 80 + random(10);
  osc.amp(0);
  let f = targetFish;
  setTimeout(() => { f.reset(); }, 3000);
  targetFish.x = -500;
}

function preload() {
  fishImg = loadImage('https://upload.wikimedia.org/wikipedia/commons/7/73/Flat_fish_icon.png');
  bucketImg = loadImage('https://cdn-icons-png.flaticon.com/512/305/305981.png');
}
